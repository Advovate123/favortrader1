<p>
  <h1>Create a new Favor</h1>
</p>

<div class= "row">
  <div class= "well col-md-8 col-md-offset-2">
    <%= form_for @favor do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      
      <%= f.label :summary %>
      <%= f.text_field :summary %>
      
      <%= f.label :description %>
      <%= f.text_area :description, rows: 10 %>
      
      <%= f.submit 'Create Favor', class: "btn btn-success" %>
    <% end %>
    
    
  </div>
</div>